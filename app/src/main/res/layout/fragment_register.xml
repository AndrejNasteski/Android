<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/edit_text_email_register"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_text_email_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/name"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/edit_text_surname"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/edit_text_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/surname"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/enter_phone_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_surname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/phone"
            android:inputType="phone"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/password_register"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/enter_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/password_register_confirm"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorPrimary" />


        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_register_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="@string/register"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_click_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/have_an_account_login_here"
            android:textColor="#8C8C8C" />


    </RelativeLayout>

</FrameLayout>